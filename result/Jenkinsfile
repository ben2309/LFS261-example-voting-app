pipeline {
  agent any

  stages {
    stage('Build') {
      when{
        changeset "**/result/**"
      }
    }
            steps {
                echo 'Building..'
                dir ('result')
                sh 'npm install'
            }
        }
        stage('Test') {
            when{
        changeset "**/result/**"
        }
            steps {
                echo 'Testing..'
                dir ('result')
                sh 'npm install'
                sh 'npm test'

            }
        }
        
    post{
        always{
            echo 'Building multibranch pipeline for worker is completed..'
        }
    }
}
