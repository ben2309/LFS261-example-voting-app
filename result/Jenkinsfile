pipeline {
  agent any
  tools{
    nodejs 'NodeJS 8.9.0'
  }
  stages{
    stage("build"){
      when{
        changeset "**/worker/**"
        }
      steps{
        echo 'Building..'
        dir ('result'){
          sh 'npm install'
          }
        }
    }
        stage("test"){
            when{
        changeset "**/result/**"
        }
            steps {
                echo 'Testing..'
                dir ('result'){
                sh 'npm install'
                sh 'npm test'
                }

            }
        }
  }
    post{
        always{
            echo 'Building multibranch pipeline for worker is completed..'
            slackSend color: "good", message: "Message from Jenkins Pipeline"
        }
    }
}
